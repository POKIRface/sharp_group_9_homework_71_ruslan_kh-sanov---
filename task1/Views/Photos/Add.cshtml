@model Photo
@{ ViewBag.Title = "Добавить фото";
    Layout = "_Layout"; }
<h2>Добавьте фото</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="Add" asp-controller="Photos" method="post">
            <div class="form-row">
                <label for="">
                    Фото
                    <input asp-for="Picture" type="text">
                    <span asp-validation-for="Picture"></span>
                </label>
            </div>
            <div class="form-row">
                <label for="">
                    Описание фото
                    <input asp-for="PuctureDescription" type="text">
                    <span asp-validation-for="PuctureDescription"></span>
                </label>
            </div>
            <div class="form-row">
                <label for="">
                    <input disabled type="text" value="@Model.User" hidden>
                </label>
                <input asp-for="UserId" type="number" value="@Model.UserId" hidden>
            </div>
            <button type="submit">Добавить</button>
        </form>
    </div>
</div>
@section scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}